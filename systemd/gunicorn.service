[Unit]
Description=gunicorn daemon
After=network.target postgresql@14-main.service
Before=nginx.service

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/mikes-boxes
RuntimeDirectory=mikesboxes
RuntimeDirectoryMode=0755
EnvironmentFile=/etc/mikes-boxes.env
ExecStart=/usr/bin/gunicorn --reload --access-logfile - --workers 5 --bind unix:/run/mikesboxes/mikesboxes.sock mikesboxes.wsgi:application
Restart=always

[Install]
WantedBy=multi-user.target
