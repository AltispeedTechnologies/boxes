[Unit]
Description=Celery Service
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
EnvironmentFile=/etc/mikes-boxes.env
WorkingDirectory=/var/www/mikes-boxes
ExecStart=/var/www/mikes-boxes/env/bin/celery -A mikesboxes beat -l info --schedule=/run/mikesboxes/celerybeat-schedule
Restart=always

[Install]
WantedBy=multi-user.target
